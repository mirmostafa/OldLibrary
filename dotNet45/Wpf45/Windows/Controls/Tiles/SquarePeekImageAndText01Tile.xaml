<tiles:BaseTile x:Class="Mohammad.Wpf.Windows.Controls.Tiles.SquarePeekImageAndText01Tile"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:tiles="clr-namespace:Mohammad.Wpf.Windows.Controls.Tiles"
                Width="150"
                Height="310">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Tiles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="10" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <tiles:SquareImageTile x:Name="SquareImageTile" x:FieldModifier="public" />
        <tiles:SquareText01Tile x:Name="SquareText01Tile"
                                Grid.Row="2"
                                x:FieldModifier="public" />
    </Grid>
</tiles:BaseTile>