<controls:LibUserControl x:Class="Mohammad.Wpf.Windows.Controls.SeparatorControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:controls="clr-namespace:Mohammad.Wpf.Windows.Controls"
                         x:Name="Me"
                         Margin="0,5,0,0"
                         Background="Transparent"
                         Padding="0"
                         d:DesignWidth="300"
                         mc:Ignorable="d">
    <DockPanel Margin="0" DataContext="{Binding ElementName=Me}">
        <ContentPresenter Margin="0"
                          Content="{Binding Header}"
                          Style="{Binding HeaderStyle}" />
        <Separator Name="Separator"
                   Margin="0"
                   Background="{Binding SepratorColor}"
                   Padding="0" />
    </DockPanel>
</controls:LibUserControl>